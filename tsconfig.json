{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "paths": {
    "*": ["src/*"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
